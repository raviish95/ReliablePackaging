<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/azure"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:outlineSpotShadowColor="@color/light_blue">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azure"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/light_blue"
                android:gravity="center_vertical|center"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/light_blue"
                android:gravity="center_vertical|center"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialogfor_edittext"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <EditText
                        android:id="@+id/weight_kg"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="Weight in KG"
                        android:textColor="@color/black"
                        android:textColorHint="@color/new_grey"
                        android:textSize="20sp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/layertype"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center|center_horizontal"
                        android:hint="@string/layertype"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#05ab9a"
                        android:textSize="20sp"
                        app:met_floatingLabel="normal" />
                    <!--   <EditText
                           android:id="@+id/layerType"
                           android:layout_width="wrap_content"
                           android:layout_height="80dp"
                           android:layout_weight="1"
                           android:hint="Layer type"
                           android:inputType="textPassword"
                           android:textColor="@color/black"
                           android:textColorHint="@color/new_grey"
                           android:textSize="20sp" />-->
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
