<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <!--<ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>

        <!--
                <Button
                    android:id="@+id/addReOrder"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rebookordergradient"
                    android:text="Re-Book" />-->

    </LinearLayout>

    <Button
        android:id="@+id/orders"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="Order"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/weight_kg"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:hint="Weight in KG"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/new_grey"
        android:textSize="20sp"
        android:visibility="gone" />


</RelativeLayout>